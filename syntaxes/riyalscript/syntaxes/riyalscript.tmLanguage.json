{
  "scopeName": "source.RiyalScript",
  "name": "RiyalScript",
  "fileTypes": ["RiyalScript"],
  "patterns": [
    {
      "name": "keyword.control.RiyalScript",
      "match": "\\b(func|let|if|else|end|return|print)\\b"
    },
    {
      "name": "constant.numeric.RiyalScript",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    {
      "name": "string.quoted.double.RiyalScript",
      "match": "\"(?:[^\"\\\\]|\\\\.)*\""
    },
    {
      "name": "comment.line.double-slash.RiyalScript",
      "match": "\\\\\\\\.*$"
    },
    {
      "name": "entity.name.function.RiyalScript",
      "match": "\\bfunc\\s+([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": {
          "name": "entity.name.function.RiyalScript"
        }
      }
    },
    {
      "name": "keyword.operator.RiyalScript",
      "match": "\\+|\\-|\\*|\\/|%|=|==|!=|<=|>=|<|>"
    },
    {
      "name": "variable.other.RiyalScript",
      "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    }
  ]
}
